<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MuseumFusion.BookTicketsPage"
             Title="BookTicketsPage">
    <StackLayout>
        <Label Text="Book Tickets" FontSize="24" FontAttributes="Bold"/>
        <Entry Placeholder="Name" x:Name="NameEntry"/>
        <Entry Placeholder="Email" x:Name="EmailEntry"/>
        <Entry Placeholder="Number of Tickets" x:Name="TicketsEntry"/>
        <Button Text="Buy" Clicked="OnBuyClicked"/>
    </StackLayout>
</ContentPage>