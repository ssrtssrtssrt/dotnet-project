<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MuseumFusion.CongratulationsPage"
             Title="CongratulationsPage">
    <StackLayout>
        <Image Source="checkmark.png" WidthRequest="100" HeightRequest="100" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>

        <Label Text="Congratulations!" FontSize="24" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Margin="0,20"/>

        <Label Text="Ticket Booked Successfully!" FontSize="18" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>

        <!-- Go To Home button -->
        <Button Text="Go To Home" Clicked="OnGoToHomeClicked" HorizontalOptions="CenterAndExpand" Margin="20"/>
    </StackLayout>
</ContentPage>